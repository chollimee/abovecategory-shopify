{% assign slider_enabled = true %}
<div class="swiper-container">
  <!-- Additional required wrapper -->
  <ul class="swiper-wrapper">
    {% for i in (1..6) %}
      {% capture slide %}slide_{{ i }}{% endcapture %}
      {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
      {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
      {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
      {% capture slide_content %}slide_{{ i }}_content{% endcapture %}
      {% capture slide_class %}slide_{{ i }}_class{% endcapture %}
      {% if settings[slide] %}
        <li class="swiper-slide">
          {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
          <div class="caption caption-{{ settings[slide_class] }}">
            <div class="caption-text">{{ settings[slide_content] }}</div>
            <div class="caption-link">
            <a href="{{ settings[slide_link] }}" class="ac-link btn btn-info">READ MORE</a>
            </div>
          </div>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
  
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"><i class="fa fa-angle-left"></i></div>
  <div class="swiper-button-next"><i class="fa fa-angle-right"></i></div>
</div>

<script>        
var mySwiper = new Swiper ('.swiper-container', {
  // Optional parameters
  direction: 'horizontal',
  loop: true,
  
  // If we need pagination
  pagination: '.swiper-pagination',
  paginationClickable: true,

  preventClicksPropagation: false,
  preventClicks: false,
  
  // Navigation arrows
  nextButton: '.swiper-button-next',
  prevButton: '.swiper-button-prev'
})        
</script>