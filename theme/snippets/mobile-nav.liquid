<div id="mobile-navigation" off-canvas="left-sidebar left reveal">
  <div id="search-box">
    <form role="search" method="get" id="search-form" action="/search">
      <div class="input-group search">
        <span class="input-group-addon">
          <i class="fa fa-search"></i>
        </span>
        <input type="text" value="{{ search.terms | escape }}" name="s" id="s" class="form-control" placeholder="Search"/>
      </div>
    </form>
  </div>
  <div id="cart-links" class="text-xs-center">
    <ul class="row">
      <li class="col-xs-6">
        <a href="">Join/Login</a>
      </li>
      <li class="col-xs-6">
        <a href=""><i class="fa fa-shopping-cart"></i></a>
      </li>
    </ul>
  </div>
  <nav id="main-menu">
    {% for link in linklists.main-menu.links %}
      {% assign child_list_handle = link.title | handleize %}
      <li class="mobile-nav__link" aria-haspopup="true">
        {% if linklists[child_list_handle].links != blank %}
          <a href="{{ link.url }}" class="mobile-nav__sublist-trigger">
            {{ link.title }}
            {% include 'mobile-nav-icons' %}
          </a>
          <ul class="mobile-nav__sublist">  
            {% for link in linklists[child_list_handle].links %}
              <li class="mobile-nav__sublist-link">
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <a href="{{ link.url }}" class="mobile-nav">
            {{ link.title }}
          </a>
        {% endif %}
      </li>
      {% endfor %}

      {% if shop.customer_accounts_enabled %}
        {% if customer %}
          <li class="mobile-nav__link">
            <a href="/account">{{ 'layout.customer.account' | t }}</a>
          </li>
          <li class="mobile-nav__link">
            {{ 'layout.customer.log_out' | t | customer_logout_link }}
          </li>
        {% else %}
          <li class="mobile-nav__link">
            {{ 'layout.customer.log_in' | t | customer_login_link }}
          </li>
          <li class="mobile-nav__link">
            {{ 'layout.customer.create_account' | t | customer_register_link }}
          </li>
        {% endif %}
      {% endif %}
  </nav>
</div>
